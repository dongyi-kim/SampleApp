<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cdmst.sampleapp.MainActivity">

    <!--Linear Layout은 View들을 한 줄로 쭉 나열해주는 레이아웃 View입니다-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!--모든 View에는 Width와 Height를 정해주어야 합니다-->
        <!--직접 수치로 사이즈를 입력해주어도 되고, 다음의 상수를 사용해도 됩니다-->
        <!--WrapContent : 해당 View 내부의 내용에 사이즈를 맞춥니다-->
        <!--MatchParent : 해당 View를 감싸고있는 부모 뷰에 맞춥니다-->

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textSize="30dp"
            android:id="@+id/my_textview"/> <!--나중에 액티비티에서 접근할 수 있게 리소스 ID를 정해줄 수 있습니다-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="번호 선택"
            android:textSize="30dp"
            android:id="@+id/my_button1"/>


    </LinearLayout>



</LinearLayout>
